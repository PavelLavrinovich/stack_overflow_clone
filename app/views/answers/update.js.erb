<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message.html_safe %>');
  <% end %>
<% else %>
  $('#<%= dom_id(@answer) %>-body').html('<%= j @answer.body %>');
  $('#answer_body').val('');
<% end %>
$('#new_answer').prop('method', 'post');
$('#new_answer').prop('action', '/questions/<%= j @answer.question_id.to_s %>/answers');
